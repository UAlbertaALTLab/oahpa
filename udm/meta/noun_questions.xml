<!-- xml-structure for questions in Morfa C -->
<questions>
  <q id="nom1">
    <qtype>N-NOM</qtype>
    <question>
      <text>Мар SUBJ MAINV</text> <!-- What does X drink? X drinks Y. -->
      <element id="SUBJ">
            <grammar tag="N+Sg+Nom"/>
        <sem class="PEOPLE"/>
      </element>
      <element id="MAINV">
        <grammar tag="V+Ind+Prs+Sg3"/> <!-- removed Act -->
        <id>юыны</id>
        <sem/>
      </element>
    </question>
    <answer> 
      <text>SUBJ MAINV N-NOM</text>
      <element game='morfa' id="N-NOM" task="yes">
        <grammar tag="N+Sg+Nom"/>
        <sem class="DRINK"/>
      </element>
    </answer>
  </q>
