<?xml version="1.0" encoding="utf-8"?>
<!--
     This file defines the specific messages displayed for a message ID for a
     given language. 

     Each <message /> must contain the following:
      
       * an `id` attribute referencing the ID, which is supplied in
         feedback_nouns.xml, in the <msg /> node.

       * Message content within the <message /> node: the word WORDFORM will be
         automatically replaced by the wordform the user is working on when they
         click help.

       * Optionally: an `order` attribute, which will be used to sort the
         display of the messages. The value is a letter, from A-Z.
       
     -->
<messages xml:lang="eng"> 
    <message order="A" id="animate">WORDFORM is an animate noun </message>    
    <message order="A" id="inanimate">WORDFORM is an inanimate noun </message>    
    <message order="B" id="plural-ak">and the plural suffix is -ak. </message>    
    <message order="C" id="k-gives-w">Add -w- because of stem final -k.</message>    
    <message order="C" id="und-w">Add the underlying -w-.</message>    

    <message order="C" id="plural-a">and the plural suffix is -a. </message>    
    <message order="C" id="plural-wa">Add -w- because of -k.</message>    
    <message order="C" id="plural-i-a">Instead of -i.</message>    

    <message order="A" id="not-k-w-y">WORDFORM does not end in a "k" or a semi-vowel.</message>    
    <message order="A" id="ay-aw-iy-oy">WORDFORM ends in a semi-vowel. Remember to drop the semi-vowel and lengthen the vowel before it. Then add "-hk."</message>    
    <message order="A" id="k-gives-ohk">WORDFORM ends in a "k."</message>    
    <message order="A" id="distributive">WORDFORM takes a distributive locative.</message>    
    <message order="A" id="irreg">WORDFORM is irregular.</message>    

    <message order="B" id="locative-ihk">All other regular nouns use the suffix "-ihk."</message>    
    <message order="B" id="locative-iihk">The suffix should look like "-îhk."</message>
    <message order="B" id="locative-aahk">The suffix should look like "-âhk."</message>    
    <message order="B" id="locative-ohk">Nouns ending in "k" take the "-ohk" suffix.</message>    
    <message order="B" id="locative-oohk">The suffix should look like " -ôhk."</message>    
    <message order="B" id="locative-naahk">The distributive locative suffix is "-nâhk."</message>    
    <message order="B" id="locative-irreg">It takes the suffix "-ihk."</message>    

    <message order="A" id="base-k">The baseform of WORDFORM ends in a "k."</message>    
    <message order="A" id="base-not-k-w-y">The baseform of WORDFORM does not end in a "k" or a semi-vowel.</message>    
    <message order="A" id="base-semi">The baseform of WORDFORM ends in a semi-vowel.</message>    
    
    <message order="B" id="diminutive-os">Remove the diminutive suffix "-os" to find the base form.</message>
    <message order="B" id="diminutive-is">Remove the diminutive suffix "-is" to find the base form.</message>
    <message order="B" id="diminutive-semi">This means that the semi-vowel was dropped and the preceding vowel was lengthened before the diminutive suffix was added. Reverse these steps to find the baseform.</message>
    <message order="C" id="diminutive-t-c">Remember that "t" becomes "c" in the diminutive form.</message>

    <message order="B" id="prefix-n">The possessive prefix is n(i)-. </message>    
    <message order="B" id="prefix-k">The possessive prefix is k(i)-. </message>    
    <message order="B" id="prefix-o">The possessive prefix is o- or w-. </message>    

    <message order="C" id="obviative">Add obviative -a.</message>    
    <message order="C" id="iyiw-Obv">The possessive suffix -iyiw- and remember obviative -a.</message>    
    <message order="C" id="inaan">The possessive suffix is -inân.</message>    
    <message order="C" id="inaw">The possessive suffix is -inaw.</message>    
    <message order="C" id="iwaaw">The possessive suffix is -inân.</message>    
    <message order="C" id="iyiw-Obv">The possessive suffix -iyiw- and remember obviative -a.</message>    
    </messages>
