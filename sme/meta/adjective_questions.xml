<!-- xml-structure for questions in morphdrill -->
<!-- Questions for adjectives -->

<questions>

<!-- Attribute positive -->

  <q id="attrpos0">
    <qtype>ATTRPOS</qtype>
   <question>
      <text>Mu SUBJ MAINV PRED . Makkár SUBJ mus MAINV</text>
      <element id="SUBJ">   
	<grammar pos="N"/>
	<sem class="CLOTHING"/>
      </element>
      <element id="MAINV">
	<id>leat</id> 
	<grammar tag="V+Ind+Prs+Person-Number"/>   
      </element>
      <element id="PRED">     
	<grammar tag="A+Number+Nom"/>   <!-- same number as SUBJ -->
	<sem class="CLOTHING_A"/>
	<agreement id="SUBJ"/>
      </element>
    </question>
    <answer> 
      <text>Dus MAINV ATTR SUBJ</text>
      <element id="ATTR" task="yes" content="PRED">   <!-- Same A as PRED -->
	<grammar tag="A+Attr"/>  <!-- no number -->
      </element>
    </answer>
  </q>
  
