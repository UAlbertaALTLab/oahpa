<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dialogue PUBLIC "-//UIT//DTD Corpus V1.0//EN" "dialogues.dtd">

<!-- topics_cafe.xml: Test dialogue in cafe                        -->
<!-- Specifies the structure for a dialogue                        -->
<!-- The exact format of the questions is not given here, neither  -->
<!-- feedback or anything other that does no immediately belong to -->
<!-- the main discussion.                                          --> 
<!-- This file is potentially language-independent (it would require -->
<!-- moving uttances etc. also to links.)                          -->
<!-- The topics follow each other in the order given here.         -->
<!-- Topic changes when there are no further links to questions.   -->
<!-- $Id$ -->

<dialogue name="visit">
  
  <topic name="Buorre_beaivi">
    <utt type="opening" name="buorre_beaivi">
      <text>Buorre beaivi! Bures boahtin mu geahčái!</text>
    </utt>
  </topic>  
  
  <topic name="cohkkat">
    <utt type="question" name="cohkkajetne_go_das">
      <text>Čohkkájetne go dás?</text>
      <alt type="neg" link="Manne_go_gievkkanii"/>
      <alt type="default">
	<text>Na moai čohkkájetne dás.</text>
      </alt>
    </utt>
  
    <utt type="question" name="manne_go_gievkkanii">
      <text>Gievkkanis lea vuogas čohkkát. Manne go gievkkanii?</text>
      <alt type="pos">
	<text>Gievkkanis lea buorre.</text>
      </alt>
      <alt type="default">
	<text>Na moai čohkkájetne dás.</text>
      </alt>
    </utt>

    <utt type="closing" name="cohkkat_closing">
      <text>Mun lean okto ruovttus odne.</text>
      </utt>            
  </topic>

  <topic name="juhkat">    
    <utt type="question" name="Haliidat_go_gafe_vai_deaja">
      <text>Háliidat go gáfe vai deaja?</text>
      <alt target="gáffe" link="Geavahat_go_mielkki"/>
      <alt target="deadja" link="Háliidat_go_honnega"/>
      <alt type="neg" link="Háliidat_go_juoida_eará"/>
      <alt type="default"><text>Mus ii leat.</text>
      </alt>
    </utt>  
    
    <utt type="question" name="Háliidat_go_juoida_eará">
      <text>Háliidat go juoida eará?</text>
      <alt type="pos" link="Maid_don_háliidat_juhkat"/>
      <alt type="default" link="juhkat_closing"/>
    </utt>
    
    <utt type="question" name="Háliidat_go_honnega">
      <text>Háliidat go honnega?</text>
      <alt type="neg" link="Geavahat_go_sohkkara"/>
      <alt type="default" link="Geavahat_go_mielkki"/>
    </utt>
    
    <utt type="question" name="Geavahat_go_sohkkara">
      <text>Geavahat go sohkkara?</text>
      <alt type="default" link="Geavahat_go_mielkki"/>   
    </utt>
    
    <utt type="question" name="Geavahat_go_mielkki">
      <text>Geavahat go mielkki?</text>
      <alt type="default">
	<text>Dá lea dutnje. Leage buorre.</text>
      </alt>
    </utt>
    
    <utt class="DRINK" type="question" name="Maid_don_háliidat_juhkat">
      <text>Dás oainnát makkár juhkamušat musa leat. Maid don háliidat juhkat?</text>
      <!--  <utt img="drinklist.jpg"/> -->
      <alt type="pos">
	<text>Mun buvttán dutnje NOUN</text>
	<element id="NOUN">
	  <id>dia-target</id>
	  <grammar pos="Sg+Acc"/>
	</element> 
      </alt>
      <default link="juhkat_closing"/>
    </utt>  
    
    <utt type="closing" name="juhkat_closing">
      <text>Galggašii lea juoga borrat maid...</text>
    </utt>
  </topic>
  
  <topic name="gáhkku">
    <utt type="opening" name="Mus_lea_lákcagáhkku">
      <text>Mus lea lákcagáhkku mii bázii mu riegádanbeaifeasttas.</text>
    </utt>
    <utt type="question" name="Háliidat_go_gáhku">
      <text>Háliidat go gáhku?</text>
      <alt type="pos"><text>Mun buvttán gáhku!</text></alt>
      <alt type="default"><text>In sáhte fállat eará odne.</text></alt>
    </utt>
    
    <utt type="closing" name="gáhkku_closing">
      <text>Suohtas duinna humadit.</text>
    </utt>
    
    
  </topic>
  
  <topic name="Giitu_fitnamis">
    <utt type="closing" name="Giitu_fitnamis_closing">
      <text>Giitu fitnamis!</text>
    </utt>
  </topic>

</dialogue>
