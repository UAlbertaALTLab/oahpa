<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dialogue PUBLIC "-//UIT//DTD Corpus V1.0//EN" "dialogues.dtd">

<!-- topics_cafe.xml: Test dialogue in cafe                        -->
<!-- Specifies the structure for a dialogue                        -->
<!-- The exact format of the questions is not given here, neither  -->
<!-- feedback or anything other that does no immediately belong to -->
<!-- the main discussion.                                          --> 
<!-- This file is potentially language-independent (it would require -->
<!-- moving uttances etc. also to links.)                          -->
<!-- The topics follow each other in the order given here.         -->
<!-- Topic changes when there are no further links to questions.   -->
<!-- $Id$ -->

<dialogue name="visit">

<topic name="Buorre_beaivi">
<utt type="opening" name="buorre_beaivi">Buorre beaivi! Bures boahtin mu geahčái!</utt>
</topic>  

<topic name="čohkkát">
   <question>
   <utt type="question" name="čohkkájetne_go_dás">Čohkkájetne go dás?</utt>
     <neg qlink="Manne_go_gievkkanii"/>
     <default><utt type="comment" name="Na_moai_čohkkájetne_dás">Na moai čohkkájetne dás.</utt></default> 
   </question>

   <question>   
   <utt type="question" name="manne_go_gievkkanii">Gievkkanis lea vuogas čohkkát. Manne go gievkkanii?</utt>
     <pos><utt>Gievkkanis lea buorre.</utt>
    </pos>
	 <default>
	 <utt>Na moai čohkkájetne dás.</utt>
    </default>
   </question>

	<utt type="closing" name="mun_lean_okto_ruovttus_odne">Mun lean okto ruovttus odne.</utt>            
</topic>

<topic name="juhkat">    
  <question>
  <utt type="question" name="Háliidat_go_gáfe_vai_deaja">Háliidat go gáfe vai deaja?</utt>  
	<pos> 
    <alt target="gáffe" link="Geavahat_go_mielkki"/>
    <alt target="deadja" link="Háliidat_go_honnega"/>
    </pos>
	<neg link="Háliidat_go_juoida_eará"/>
	<default><utt>Mus ii leat.</utt></default>
  </question>

  <question>
	<utt type="question" name="Háliidat_go_juoida_eará">Háliidat go juoida eará?</utt>
	<pos link="Maid_don_háliidat_juhkat"/>
	<default link="closing"/>
  </question>

  <question>
  <utt type="question" name="Háliidat_go_honnega">Háliidat go honnega?</utt>
     <neg link="Geavahat_go_sohkkara"/>
       <default link="Geavahat_go_mielkki"/>
  </question>

  <question>
	<utt type="question" name="Geavahat_go_sohkkara">Geavahat go sohkkara?</utt>
	<default link="Geavahat_go_mielkki"/>   
  </question>

  <question>
  <utt type="question" name="Geavahat_go_mielkki">Geavahat go mielkki?</utt>
    <default><utt>Dá lea dutnje. Leage buorre.</utt></default>
  </question>

  <question>  
  <utt class="DRINK" type="question" name="Maid_don_háliidat_juhkat">Dás oainnát makkár juhkamušat musa leat. Maid don háliidat juhkat?</utt>
<!--  <utt img="drinklist.jpg"/> -->
	<pos><utt>Mun buvttán dutnje NOUN</utt>
		    <element id="NOUN">
		  <id>dia-target</id>
		  <grammar pos="Sg+Acc"/>
    	</element> </pos>
	<default link="closing"/>
  </question>  

  <utt type="closing" name="Galggašii_lea_juoga_borrat_maid">Galggašii lea juoga borrat maid...</utt>
</topic>

<topic name="gáhkku">
  <utt type="opening" name="Mus_lea_lákcagáhkku">Mus lea lákcagáhkku mii bázii mu riegádanbeaifeasttas.</utt>

  <question>
  <utt type="question" name="Háliidat_go_gáhku">Háliidat go gáhku?</utt>
	<pos><utt>Mun buvttán gáhku!</utt></pos>
	<default><utt>In sáhte fállat eará odne.</utt></default>
  </question>

 <utt type="closing" name="Suohtas_duinna_humadit">Suohtas duinna humadit.</utt>

  
</topic>

<topic name="Giitu_fitnamis">
  <utt type="closing">Giitu fitnamis!</utt>
</topic>

</dialogue>
