<?xml version="1.0" encoding="UTF-8"?>
<!-- topics_cafe.xml: Test dialogue in cafe                        -->
<!-- Specifies the structure for a dialogue                        -->
<!-- The exact format of the questions is not given here, neither  -->
<!-- feedback or anything other that does no immediately belong to -->
<!-- the main discussion.                                          --> 
<!-- This file is potentially language-independent (it would require -->
<!-- moving uttances etc. also to links.)                          -->
<!-- The topics follow each other in the order given here.         -->
<!-- Topic changes when there are no further links to questions.   -->
<!-- $Id$ -->

<dialogue name="visit">

<topic name="Buorre_beaivi">
<opening>Buorre beaivi! Bures boahtin mu geahčái!</opening>
</topic>  
<!-- This gets a "!" in the end of the utterance, or should it be inside it? -->

<topic name="čohkkát">
   <question name="Čohkkájetne_go_dás">
     <neg><utt link="Gievkkanis_lea_vuogas_čohkkát"/></neg>
     <default><utt link="Na_moai_čohkkájetne_dás"/></default>
   </question>
   
   <question name="Manne_go_gievkkanii">
     <pos><utt link="Gievkkanis_lea_buorre"/>
          <utt link="Mun_lean_okto_ruovttus_odne"/>
    </pos>
	 <default><utt link="Na_moai_čohkkájetne_dás"/>
    </default>
   </question>


</topic>

<topic name="juhkat">    
  <question name="Háliidat_go_gáfe_vai_deaja">
	<aff obj="gáffe" obj2="deadja" qlink="Geavahat_go_mielkki"/>  
   <!--only one of objects should be in the answer -->
	<neg qlink="Háliidat_go_juoida_eará"/>
	<aff><utt list="juhkamušat" link="Mun_buvttán_dutnje_OBJ"/></aff>
   <!--the object should be in the list -->
	<default><utt link="Mus_ii_leat"/></default>
  </question>

  <question name="Geavahat_go_mielkki">
     <default qlink="Geavahat_go_sohkkara"><utt link="Dá_lea_dutnje_Leage_buorre"/></default>
  </question>

  <question name="Geavahat_go_sohkkara">
    <default><utt link="Dá_lea_dutnje_Leage_buorre"/></default>
    <!--chosen OBJ to this? Dá_lea_OBJ_dutnje_Leage_buorre -->
  </question>

  <question name="Háliidat_go_juoida_eará">
	<aff><utt list="juhkamušat" link="Mun_buvttán_dutnje_OBJ"/></aff>
<!--the object should be in the list -->
	<default><utt llink="Mus_ii_leat"/></default>
  </question>

  <closing>Mus_dáidá_leat_gáhkku</closing>
</topic>

<topic name="gáhkku">
  <opening>Mus_livččii_lákcagáhkku</opening>
  <question name="Háliidat_go_gáhku">
	<aff><utt>Mun_buvttán_gáhku</utt></aff>
	<default><utt>In_sáhte_fállat_eará_odne</utt>
             <utt>Suohtas_duinna_humadit</utt>
   </default>
  </question>

  
</topic>

<topic name="Giitu_fitnamis">
  <closing>Giitu_fitnamis</closing>
</topic>

</dialogue>
