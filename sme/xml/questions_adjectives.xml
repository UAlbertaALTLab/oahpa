<!-- predicative - sg and pl -->

  <q id="predpos0">
    <qtype>PREDPOS</qtype>
    <question>
      <text>Mus leat ATTR SUBJ . Makkárat SUBJ2 leat</text>
      <element id="SUBJ">   
	<grammar tag="N+Pl+Nom"/>
	<sem class="CLOTHING"/>
      </element>
      <element id="ATTR">
	<grammar tag="A+Attr"/>  <!-- no number -->
