<!-- xml-structure for questions in morphdrill -->
<!-- Questions for adjectives -->

<questions>

<!-- Attribute positive -->

  <q>
    <qtype>ATTRPOS</qtype>
  <agreement>SUBJ/PRED</agreement>
   <question>
      <text>Mu SUBJ MAINV PRED. Makkár SUBJ mus MAINV</text>
      <element type="SUBJ">   
	<grammar pos="N"/>
	<sem class="CLOTHING"/>
      </element>
      <element type="MAINV">
	<id>leat</id> 
	<grammar tag="V+Ind+Prs+Person-Number"/>   
      </element>
      <element type="PRED">     
	<grammar pos="A+Number+Nom"/>   <!-- same number as SUBJ -->
	<sem class="CLOTHES-adj"/>
	<agreement id="SUBJ"/>
      </element>
    </question>
    <answer> 
      <text>Dus MAINV ATTR SUBJ</text>
      <element type="ATTR" task="yes">   <!-- Same A as PRED -->
	<grammar tag="A+Attr"/>  <!-- no number -->
      </element>
    </answer>
  </q>

