<!-- predicative - sg and pl -->

  <q>
    <qtype>PREDPOS</qtype>
  <agreement>SUBJ/PRED</agreement>
  <agreement>INTERR/SUBJ</agreement>
   <question>
      <text>Mus MAINV ATTR SUBJ. INTERR SUBJ MAINV</text>
      <element type="SUBJ">   
	<grammar pos="N"/>
	<sem class="CLOTHING"/>
      </element>
      <element type="MAINV">
	<id>leat</id> 
	<grammar tag="V+Ind+Prs+Person-Number"/>   
      </element>
      <element type="ATTR">
	<grammar tag="A+Attr"/>  <!-- no number -->
	<sem class="CLOTHES-adj"/>
      </element>
      <element type="INTERR">
	<lemma>makkár</lemma> 
	<grammar tag="Number+Nom"/>   
	<agreement id="SUBJ"/>
      </element>
    </question>
    <answer> 
      <text>SUBJ MAINV PRED</text>
      <element type="PRED" task="yes">     <!-- Same A as ATTR -->
	<grammar pos="A+Number+Nom"/>   <!-- same number as SUBJ -->
	<agreement id="SUBJ"/>
      </element>
    </answer>
  </q>
 
 <!-- comparative predicative - sg and pl-->
 
    <q>
    <qtype>PREDCOMP</qtype>
    <agreement>SUBJ/PRED</agreement>
    <agreement>SUBJ/PREDCOMP</agreement>
    <agreement>INTERR/SUBJ</agreement>
   <question>
      <text>Mu SUBJ MAINV PRED. INTERR du SUBJ MAINV</text>
      <element type="SUBJ">   
	<grammar pos="N"/>
	<sem class="FAMILY"/>
      </element>
      <element type="MAINV">
	<id>leat</id> 
	<grammar tag="V+Ind+Prs+Person-Number"/>   
      </element>
      <element type="INTERR">
	<lemma>makkár</lemma> 
	<grammar tag="Number+Nom"/>   
	<agreement id="SUBJ"/>
      </element>
      <element type="PRED">  <!-- compare="yes"-->  
	<grammar pos="A+Number+Nom"/>   <!-- same number as SUBJ -->
	<sem class="HUMAN-adj"/>
	<agreement id="SUBJ"/>
      </element>
    </question>
    <answer> 
      <text>Mu SUBJ MAINV PREDCOMP</text>
      <element type="PREDCOMP" task="yes">   <!-- Same A as PRED -->
	<grammar tag="A+Comp+Number+Nom"/>  <!-- same number as SUBJ -->
	<agreement id="SUBJ"/>
      </element>
    </answer>
  </q>



