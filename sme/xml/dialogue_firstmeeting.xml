<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dialogue PUBLIC "-//UIT//DTD Corpus V1.0//EN" "dialogues.dtd">

<!-- $Id$ -->

<dialogue name="firstmeeting">

  <topic name="Buorre_beaivi">
    <utt type="opening" name="buorre_beaivi">
      <text>Buorre beaivi! Mun lean Káre!</text>
    </utt>
  </topic>  

  <topic name="presentation">
    <utt type="question" name="Mii_namma_lea">
      <text>Mii du namma lea?</text>
      <alt target="target" variable="NAME" link="Gos_don_leat_eret">
	<text>Bures NAME . Suohtas go don leat čállime muinna odne. </text>	
	<element id="NAME">
	</element> 
      </alt>
      <alt target="default" link="Gos_don_leat_eret"/>
    </utt>

    <utt type="question" name="Gos_don_leat_eret">
      <text>Mun lean Leavvajogas eret. Gos don leat eret?</text>
      <alt target="target" link="Gos_don_orut_dál">
      </alt>
    </utt>

    <utt type="question" name="Gos_don_orut_dál">
      <text>Mun orun Kárášjogas dán áigge. Gos don orut dál?</text>
      <!-- Where do you live now? NOUN will get target in the answer. -->
      <alt target="target" variable="PLACENAME" link="presentation_closing">
	<text>Mun lean leamaš PLACENAME .</text>
	<element id="PLACENAME">
	  <grammar tag="N+Sg+Loc"/>
	</element> 
      </alt>
      <alt target="unknown" link="Lea_go_dat_baiki"/>
      <alt target="default" link="work_or_school_opening"/>
    </utt>

    <utt type="question" name="Lea_go_dat_baiki">
      <text>In leat gullan dan birra ovdal. Lea go dat báiki?</text>
      <alt target="pos" link="work_or_school_opening">
	<text>Mun oahpan juoidá juohke beaivve.</text>
      </alt>
      <alt target="default" link="work_or_school_opening"/>
    </utt>


    <utt type="closing" name="presentation_closing">
      <text>PLACENAME sáhttá leat buorre orrut.</text>
	<element id="PLACENAME">
	  <grammar tag="N+Sg+Loc"/>
      </element> 
    </utt>
  </topic>
  
  <topic name="work_or_school">
    <utt type="opening" name="work_or_school_opening">
      <text>Mun lean 40 jagi boaris.</text>
    </utt>

    <utt type="question" name="Man_boaris_don_leat">
      <text>Man boaris don leat?</text>
      <!-- How old are you? 1-5 child, 6-20 young, 21-100 adult -->
      <alt target="young" link="Váccát_go_skuvlla"/>
      <alt target="child" link="Leat_go_álgán_skuvlii"/>
      <alt target="adult" link="Leat_go_barggus"/>
      <alt target="default" link="Leat_go_barggus"/>
    </utt>
    
      <utt type="question" name="Váccát_go_skuvlla">
	<text>Mun barggan Sámedikkis. Váccát go skuvlla?</text>
	<alt target="pos" link="Váccát_go_vuođđoskuvlla_vai_joatkkaskuvlla"/>
	<alt target="default" link="Leat_go_barggus"/>
      </utt>
    
      <utt type="question" name="Váccát_go_vuođđoskuvlla_vai_joatkkaskuvlla">
	<text>Váccát go vuođđoskuvlla vai joatkkaskuvlla?</text>
	<!--<alt target="neg" link="Makkár_skuvlla_don_váccát_dalle"/> -->
	<alt target="default" link="work_or_school_closing"/>
      </utt>

      <utt type="question" name="Leat_go_barggus">
	<text>Leat go barggus?</text>
	<!-- Do you work??-->
	<alt target="pos" link="Makkár_bargu_dus_lea"/>
	<alt target="default" link="work_or_school_closing"/>
      </utt>
    
      <utt type="question" name="Makkár_bargu_dus_lea">
	<text>Makkár bargu dus lea?</text>
	<!-- What kind of job do you have?-->
	<alt target="default" link="work_or_school_closing"/>
      </utt>

      <utt type="question" name="Leat_go_álgán_skuvlii">
	<text>Leat go álgán skuvlii?</text>
	<alt target="default" link="work_or_school_closing"/>
    </utt>
    
      <utt type="closing" name="work_or_school_closing">
	<text>Já nu!</text>
     <alt target="young" link="gos_du_eadni_lea_eret"/>
      <alt target="child" link="gos_du_eadni_lea_eret"/>
      <alt target="adult" link="leat_go_naitalan"/>
      </utt>

  </topic>

  <topic name="married">
    <utt type="question" name="leat_go_naitalan">
      <text>Mun lean náitalan. Leat go don náitalan?</text>
	<alt target="default" link="leat_go_dus_mánát"/>
    </utt>
    
    <utt type="question" name="leat_go_dus_mánát">
      <text>Mus leat guokte máná - guokte nieidda. Leat go dus mánát?</text>
      <alt target="pos" link="galle_máná"/>
      <alt target="neg" link="gos_du_eadni_lea_eret"/>
      <alt target="default" link="gos_du_eadni_lea_eret"/>
    </utt>

    <utt type="question" name="galle_máná">
      <text>Galle máná dus leat?</text>
      <alt target="default" link="married_closing"/>
    </utt>

    <utt type="closing" name="married_closing">
      <text>Sávan ahte du mielas lea ortnegis ahte jearan veaháš. Mun liikon oahpásmuvvat.</text>
    </utt>
  </topic>  

  <topic name="family">
    <utt type="question" name="gos_du_eadni_lea_eret">
      <text>Mu eadni lea Čáhcesullos eret. Gos du eadni lea eret?</text>
      <alt target="unknown" link="Lea_go_dat_baiki2"/>
	<alt target="default" link="gos_du_ahcci_lea_eret"/>
    </utt>

    <utt type="question" name="Lea_go_dat_baiki2">
      <text>Lea go dat báiki? In leat gullan dan birra ovdal.</text>
      <alt target="pos" link="gos_du_ahcci_lea_eret">
	<text>Na nu.</text>
      </alt>
      <alt target="default" link="gos_du_ahcci_lea_eret"/>
    </utt>

    
    <utt type="question" name="gos_du_ahcci_lea_eret">
      <text>Mu áhčči lea jápmán dál, muhto son lei Kárášjogas eret. Gos du áhčči lea eret?</text>
      <alt target="unknown" link="Lea_go_dat_baiki3"/>
      <alt target="default" link="galle_viellja_ja_oabbá"/>
    </utt>

    <utt type="question" name="Lea_go_dat_baiki3">
      <text>Lea go dat báiki? In leat gullan dan birra ovdal.</text>
      <alt target="pos" link="galle_viellja_ja_oabbá">
	<text>Dalle mun dieđán dan.</text>
      </alt>
      <alt target="default" link="galle_viellja_ja_oabbá"/>
    </utt>


    <utt type="question" name="galle_viellja_ja_oabbá">
      <text>Mus leat golbma vielja. Galle vielja ja oappá dus leat?</text>
      <alt target="default" link="family_closing"/>
    </utt>

    <utt type="closing" name="family_closing">
      <text>Suohtas gullat.</text>
      <alt target="young" link="suohtas_oahpásmuvvat_closing"/>
      <alt target="child" link="suohtas_oahpásmuvvat_closing"/>
      <alt target="adult" link="biila"/>
    </utt>
  </topic>  
  
  <!-- This part is only for adults. -->
  <topic name="biila">
    <utt type="opening" name="biila">
      <text>Mus lea hui buorre biila - Toyota Jaris.</text>
    </utt>
    <utt type="question" name="Lea_go_dus_biila">
      <text>Lea go dus biila?</text>
      <alt target="pos" link="Makkar_biila"/>
      <alt target="default" link="Leat_go_dus_sihkkelat"/>
    </utt>
    <utt type="question" name="Makkar_biila">
      <text>Makkár biila dus lea?</text>
      <alt target="name" variable="CAR" link="Lea_go_buorre_biila"/>
      <alt target="unknown" variable="CAR" link="Lea_go_dat_biila"/>
      <alt target="default" link="Háliidat_go_oastit_mu_biilla"/>
    </utt>

    <utt type="question" name="Lea_go_dat_biila">
      <text>Mun in leat gullan dakkár biilla birra ovdal. Lea go dat biila?</text>
      <alt target="pos" link="Lea_go_buorre_biila">
	<text>Mun oahpan juoidá juohke beaivve.</text>
      </alt>
      <alt target="default" link="Makkar_biila"/>
    </utt>

    
    <utt type="question" name="Lea_go_buorre_biila">
      <text>Lea go CAR buorre biila?</text> <!--The CAR is target from last question! -->
      <element id="CAR">
      </element> 
      <alt target="pos" link="biila_closing">
	<text>Lean gullan ahte lea buorre biila.</text>
      </alt>
      <alt target="default" link="Háliidat_go_oastit_mu_biilla"/>
    </utt>
    
    <utt type="question" name="Leat_go_dus_sihkkelat">
      <text>Leat go dus sihkkelat?</text>
      <alt target="neg" link="Háliidat_go_oastit_mu_biilla">
	  <text>Dalle fertet birget vuojána haga.</text>
      </alt>
      <alt target="default" link="Háliidat_go_oastit_mu_biilla">
	<text>Dahká buori sihkkelastit</text>
      </alt>
    </utt>
        
    <utt type="question" name="Háliidat_go_oastit_mu_biilla">
      <text>Háliidat go oastit mu biilla?</text>
      <alt target="neg" link="biila_closing">
	<text>Dalle fertet ohcat eará biilla.</text>
      </alt>
      <alt target="default" link="biila_closing">
	<text>In háliit dattetge vuovdit dan.</text>
      </alt> 
    </utt>

    <utt type="closing" name="biila_closing">
      <text>Mun lean hui duhtavaš iežan biillain.</text>
    </utt>
  </topic>

  <topic name="farewell">
    <utt type="closing" name="suohtas_oahpásmuvvat_closing">
      <text>Lei suohtas oahpásmuvvat dutnje, NAME .</text>
    </utt>
  </topic>  


</dialogue>
