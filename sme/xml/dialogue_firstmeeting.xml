<dialogue name="firstmeeting">

<topic name="Buorre_beaivi">
<utt type="opening">Buorre beaivi! Mun lean Káre!</utt>
</topic>  

<topic name="presentation">
<question>
<utt type="question" name="Mii_du_namma_lea">Mii du namma lea?</utt>
<!-- What is you name? -->
<utt type="comment">Bures NAME.</utt> 
<element id="NAME">
	  <id>dia-name</id>
      </element> 
</question>      
<utt type="comment">Suohtas go don leat čátas odne.</utt>
<utt type="comment">Mun lean Leavvajogas eret.</utt> 
<question>
<utt type="question" name="Gos_don_leat_eret">Gos don leat eret?</utt>
<!-- Where are you from? -->
<default><utt type="comment">Mun orun Kárášjogas dán áigge.</utt></default>
</question>
<question>
<utt type="question" name="Gos_don_orut_dál">Gos don orut dál?</utt>
<!-- Where do you live now? NOUN will get target in the answer. -->
<pos><utt type="comment">Mun lean leamaš NOUN.</utt>
<element id="NOUN">
	<grammar pos="Sg+Loc"/>
	  <id>dia-target</id>
      </element> </pos>
<default link="presentation_closing"/>
</question>

<utt type="closing" name="presentation_closing">Doppe sáhttá leat buorre orrut.</utt>
</topic>

<topic name="work_or_school">
<utt type="comment">Mun lean 40 jagi boaris.</utt>

<question>
<utt type="question" name="Man_boaris_don_leat">Man boaris don leat?</utt>
<!-- How old are you? 1-5 child, 6-20 young, 21-100 adult -->
<pos>
<alt target="dia-young" link="Váccát_go_skuvlla"/>
<alt target="dia-child" link="Leat_go_álgán_skuvlii"/>
<alt target="dia-adult" link="Leat_go_barggus"/>
</pos>
<default link="Leat_go_barggus"/>
</question>

<question>
<utt type="question" name="Váccát_go_skuvlla">Mun barggan Sámedikkis. Váccát go skuvlla?</utt>
<pos link="Váccát_go_vuođđoskuvlla_vai_joatkkaskuvlla"/>
<default link="Leat_go_barggus"/>
</question>

<question>
<utt type="question" name="Váccát_go_vuođđoskuvlla_vai_joatkkaskuvlla">Váccát go vuođđoskuvlla vai joatkkaskuvlla?</utt>
<neg link="Makkár_skuvlla_don_váccát_dalle"/> 
<default link="work_or_school_closing"/>
</question>

<question>
<utt type="question" name="Leat_go_barggus">Leat go barggus?</utt>
<!-- Do you work??-->
<pos link="Makkár_bargu_dus_lea"/>
<default link="work_or_school_closing"/>
</question>

<question>
<utt type="question" name="Makkár_bargu_dus_lea">Makkár bargu dus lea?</utt>
<!-- What kind of job do you have?-->
<default link="work_or_school_closing"/>
</question>

<question>
<utt type="question" name="Leat_go_álgán_skuvlii">Leat go álgán skuvlii?</utt>
<default link="work_or_school_closing"/>
</question>

<utt type="closing" name="work_or_school_closing">Já nu!</utt>
</topic>

<!-- This part is only for adults. -->
<topic name="biila">
<utt type="comment">Mus lea hui buorre biila - Toyota Jaris.</utt>

<question>
<utt type="question" name="Lea_go_dus_biila">Lea go dus biila?</utt>
<pos link="Makkár_biila_dus_lea"/>
<default link="Leat_go_dus_sihkkelat"/>
</question>

<question>
<utt type="question" name="Makkár_biila_dus_lea">Makkár_biila_dus_lea?</utt>
<pos link="Lea_go_NOUN_buorre_biila"/>
<default link="Háliidat_go_oastit_mu_biilla"/>
</question>

<question>
<utt type="question">Lea go NOUN buorre biila?</utt> <!--The NOUN is target from last question! -->
<element id="NOUN" target="dia-name">
      </element> 
<pos> <utt type="comment">"Lean_gullan_ahte_lea_buorre_biila"</utt> </pos>
<default link="Háliidat_go_oastit_mu_biilla"/>
</question>

<question>
<utt type="question" name="Leat_go_dus_sihkkelat">Leat go dus sihkkelat?</utt>
<neg> <utt type="comment">"Dalle_fertet_birget_vuojana_haga"</utt> </neg>
<default> <utt type="comment">"Dahká_buori_sihkkelastit"</utt></default>
</question>

 
<question>
<utt type="question" name="Háliidat_go_oastit_mu_biilla">Háliidat_go_oastit_mu_biilla?</utt>
<neg> <utt type="comment">"Dalle_fertet_ohcat_eará_biilla"</utt> </neg>
<default> <utt type="comment">"In_háliit_dattetge_vuovdit_dan"</utt> </default> 
</question>

 
<utt type="closing" name="biila_closing">Mun lean hui duhtavaš iežan biillain.</utt>
</topic>


</dialogue>
