<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dialogue PUBLIC "-//UIT//DTD Corpus V1.0//EN" "dialogues.dtd">

<!-- $Id$ -->

<dialogue name="firstmeeting">

  <topic name="Buorre_beaivi">
    <utt type="opening" name="buorre_beaivi">
      <text>Buorre beaivi! Mun lean Káre!</text>
    </utt>
  </topic>  

  <topic name="presentation">
    <utt type="question" name="Mii_du_namma_lea">
      <text>Mii du namma lea?</text>
      <!-- What is you name? -->
      <alt type="default" link="Gos_don_leat_eret">
	<text>Bures NAME . Suohtas go don leat čátas odne. Mun lean Leavvajogas eret.</text>	
	<element id="NAME">
	  <id>dia-name</id>
	</element> 
      </alt>
    </utt>

    <utt type="question" name="Gos_don_leat_eret">
      <text>Gos don leat eret?</text>
      <!-- Where are you from? -->
      <alt type="default" link="Gos_don_orut_dál">
	<text>Mun orun Kárášjogas dán áigge.</text>
      </alt>
    </utt>

    <utt type="question" name="Gos_don_orut_dál">
      <text>Gos don orut dál?</text>
      <!-- Where do you live now? NOUN will get target in the answer. -->
      <alt type="pos" link="presentation_closing">
	<text>Mun lean leamaš NOUN .</text>
	<element id="NOUN">
	  <grammar pos="Sg+Loc"/>
	  <id>dia-target</id>
      </element> 
      </alt>
      <alt type="default" link="presentation_closing"/>
    </utt>

    <utt type="closing" name="presentation_closing">
      <text>Doppe sáhttá leat buorre orrut.</text>
    </utt>
  </topic>
  
  <topic name="work_or_school">
    <utt type="opening" name="jagi">
      <text>Mun lean 40 jagi boaris.</text>
    </utt>

    <utt type="question" name="Man_boaris_don_leat">
      <text>Man boaris don leat?</text>>
      <!-- How old are you? 1-5 child, 6-20 young, 21-100 adult -->
      <alt target="dia-young" link="Váccát_go_skuvlla"/>
      <alt target="dia-child" link="Leat_go_álgán_skuvlii"/>
      <alt target="dia-adult" link="Leat_go_barggus"/>
      <alt type="default" link="Leat_go_barggus"/>
    </utt>
    
      <utt type="question" name="Váccát_go_skuvlla">
	<text>Mun barggan Sámedikkis. Váccát go skuvlla?</text>
	<alt type="pos" link="Váccát_go_vuođđoskuvlla_vai_joatkkaskuvlla"/>
	<alt type="default" link="Leat_go_barggus"/>
      </utt>
    
      <utt type="question" name="Váccát_go_vuođđoskuvlla_vai_joatkkaskuvlla">
	<text>Váccát go vuođđoskuvlla vai joatkkaskuvlla?</text>
	<!--<alt type="neg" link="Makkár_skuvlla_don_váccát_dalle"/> -->
	<alt type="default" link="work_or_school_closing"/>
      </utt>

      <utt type="question" name="Leat_go_barggus">
	<text>Leat go barggus?</text>
	<!-- Do you work??-->
	<alt type="pos" link="Makkár_bargu_dus_lea"/>
	<alt type="default" link="work_or_school_closing"/>
      </utt>
    
      <utt type="question" name="Makkár_bargu_dus_lea">
	<text>Makkár bargu dus lea?</text>
	<!-- What kind of job do you have?-->
	<alt type="default" link="work_or_school_closing"/>
      </utt>

      <utt type="question" name="Leat_go_álgán_skuvlii">
	<text>Leat go álgán skuvlii?</text>
	<alt type="default" link="work_or_school_closing"/>
    </utt>
    
      <utt type="closing" name="work_or_school_closing">
	<text>Já nu!</text>
      </utt>
  </topic>
  
  <!-- This part is only for adults. -->
  <topic name="biila">
    <utt type="opening" name="biila">
      <text>Mus lea hui buorre biila - Toyota Jaris.</text>
    </utt>
    <utt type="question" name="Lea_go_dus_biila">
      <text>Lea go dus biila?</text>
      <alt type="pos" link="Makkár_biila_dus_lea"/>
      <alt type="default" link="Leat_go_dus_sihkkelat"/>
    </utt>
    <utt type="question" name="Makkár_biila_dus_lea">
      <text>Makkár_biila_dus_lea?</text>
      <alt type="pos" link="Lea_go_NOUN_buorre_biila"/>
      <alt type="default" link="Háliidat_go_oastit_mu_biilla"/>
    </utt>
    
    <utt type="question" name="Lea_go_NOUN_buorre_biila">
      <text>Lea go NOUN buorre biila?</text> <!--The NOUN is target from last question! -->
      <element id="NOUN" target="dia-name">
      </element> 
      <alt type="pos">
	<text>Lean_gullan_ahte_lea_buorre_biila</text>
      </alt>
      <alt type="default" link="Háliidat_go_oastit_mu_biilla"/>
    </utt>
    
    <utt type="question" name="Leat_go_dus_sihkkelat">
      <text>Leat go dus sihkkelat?</text>
      <alt type="neg">
	  <text>Dalle_fertet_birget_vuojana_haga</text>
      </alt>
      <alt type="default">
	<text>Dahká_buori_sihkkelastit</text>
      </alt>
    </utt>
        
    <utt type="question" name="Háliidat_go_oastit_mu_biilla">
      <text>Háliidat_go_oastit_mu_biilla?</text>
      <alt type="neg">
	<text>Dalle_fertet_ohcat_eará_biilla</text>
      </alt>
      <alt type="default">
	<text>In_háliit_dattetge_vuovdit_dan</text>
      </alt> 
    </utt>

 
    <utt type="closing" name="biila_closing">
      <text>Mun lean hui duhtavaš iežan biillain.</text>
    </utt>
  </topic>


</dialogue>
