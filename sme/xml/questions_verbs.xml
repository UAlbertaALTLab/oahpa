<questions>

<!-- Both Morfa and QA, but in QA the answer does not have to be ACTIVITY, but any verb: -->
<!-- MAINV must agree with ANSWERSUBJECT in the answer. When the question is given in first person form, the answer comes with a second person pronoun, and vice versa. : -->
<!-- comment from saara: The mainv-answersubject agreement is implemented otherwise, -->
<!-- because it is so special. It does not have to be marked explicitely. -->
  <q>
    <qtype>VERB</qtype>
   <question>
      <text>Maid SUBJ MAINV odne</text>
      <element id="SUBJ">
	<grammar pos="Pron"/>
      </element>
      <element id="MAINV">
	<id>bargat</id> 
	<grammar tag="V+Ind+Prs+Person-Number"/>
      </element>
    </question>
    <answer> 
      <text>(odne) ANSWERSUBJECT MAINV (odne)</text>
      <element game='morfa' id="MAINV">
	<sem class="ACTIVITY"/>
	<grammar tag="V+Ind+Prs+Person-Number"/>
      </element>
      <element game='qa' id="MAINV">
	<grammar pos="V"/>
	<grammar tag="V+Ind+Prs+Person-Number"/>
      </element>
    </answer>
  </q>

