<!-- xml-structure for questions in morphdrill -->
<!-- Questions for verbs. Not yet potential -->
<questions>

<!-- Both Morfa and QA, but in QA the answer does not have to be mACTIVITY, but any verb: -->
<!-- MAINV must agree with SUBJ in the answer. When the question is given in first person form, the answer comes with a second person pronoun, and vice versa. : -->
<!-- comment from saara: The mainv-answersubject agreement is implemented otherwise, -->
<!-- because it is so special. It does not have to be marked explicitely. -->
  <q id="prt1Sg3">
    <qtype>V-PRT1</qtype>
   <question>
      <text>ADJ SUBJ ӈамгэм’ тей яляна сертась</text> 
       <element id="ADJ">
	<sem class="HUMAN_A"/>
	  <grammar pos="A" tag="A+Sg"/>
      </element> 
      <element id="SUBJ">
        <sem class="PEOPLE"/>
	<grammar tag="N+Sg+Nom+Def"/> 
      </element>
    </question>
    <answer> 
      <text>Исяк SUBJ MAINV</text>
      <element game='morfa' id="MAINV" task="yes" >
	<sem class="mACTIVITY"/>
	<grammar tag="V+IV+Ind+Prt1+ScSg3"/>
      </element>
    </answer>
  </q> 
  <q id="prt2Sg3">
    <qtype>V-PRT2</qtype>
   <question>
      <text>ADJ SUBJ тикы нерцюʼ ӈамгэм’ сертавы</text>       
      <element id="ADJ">
	   <sem class="HUMAN_A"/>
	   <grammar pos="A" tag="A+Sg" />
      </element>
      <element id="SUBJ">
        <sem class="PEOPLE"/>
	<grammar tag="N+Sg+Nom"/>
      </element>
      <element id="VERB1">
        <sem class="STATECHANGE_V"/>
	<grammar tag="V+TV+Mod/narr+Aor+ScSg2"/>
      </element>
    </question>
    <answer> 
      <text>Седе икеле SUBJ MAINV</text>
      <element game='morfa' id="MAINV" task="yes" >
	<sem class="mACTIVITY"/>
	<grammar tag="V+TV+Mod/narr+Aor+ScSg3"/>
      </element>
    </answer>
  </q> 

</questions>




