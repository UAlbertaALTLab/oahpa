# This option set is not used outside of providing shortcuts for
# following settings.
Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  gthome: &GTHOME '/home/ryan/gtsvn'

Morphology:
  sme:
    tool: *LOOKUP 
    file: [*GTHOME, "/gt/sme/bin/n-sme.fst"]
    inverse_file: [*GTHOME, "/gt/sme/bin/isme-norm.fst"]
    format: 'xfst'
    options:
      compoundBoundary: "  + #"
      tagsep: ' '
      inverse_tagsep: '+'
  nob:
    tool: [*GTHOME, '/st/nob/obt/bin/mtag-osx64']
    format: 'obt'
  sma:
    tool: *LOOKUP
    file: [*GTHOME, '/langs/sma/src/analyser-gt-desc.xfst']
    inverse_file: [*GTHOME, '/langs/sma/src/generator-gt-norm.xfst']
    format: 'xfst'
    options:
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: sme
    name:
      eng: "Northern Sámi"
      nob: "nordsamisk"

  - iso: nob
    name:
      eng: "Norwegian (Bokmål)"
      nob: "norsk (bokmål)"

  - iso: fin
    name:
      eng: "Finnish"
      nob: "finsk"

  - iso: sma
    name:
      eng: "Southern Sámi"
      nob: "sørsamisk"

  - iso: eng
    name:
      eng: "English"
      nob: "engelsk"

# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:
  - source: sme
    target: nob
    path: 'dicts/sme-nob.all.xml'

  - source: nob
    target: sme
    path: 'dicts/nob-sme.all.xml'

  - source: sme
    target: fin
    path: 'dicts/sme-fin.all.xml'

  - source: fin
    target: sme
    path: 'dicts/fin-sme.all.xml'

  - source: sma
    target: nob
    path: 'dicts/sma-nob.all.xml'

  - source: nob
    target: sma
    path: 'dicts/nob-sma.all.xml'



# Tags to accept as the dictionary form for each POS, e.g., want to show
# paradigms for words that can be analyzed with this form
Baseforms:
  sma:
    V: 
      - "V+IV+Inf"
      - "V+TV+Inf"
      - "V+Inf"

    N:
      - "N+Sg+Nom"
      - "N+SgNomCmp"
      - "N+SgCmp"

  sme:
    V:
      - "V"
      - "V inf."

    A:
      - "A+Attr"

    Adv:
      - 'Adv'

    N:
      - "N ent. nom."
      - "N hum. nom."
      - "N NomAg ent. nom."
      - "N"

# TODO: help text
Paradigms:
  sma:
    N:
      - "Sg+Nom"
      - "Pl+Nom"
      - "Sg+Ill"
      - "Sg+Ine"
      - "Pl+Ill"
      - "Pl+Ine"
    V:
      - "Ind+Prs+Sg1"
      - "Ind+Prt+Sg1"
      - "ConNeg"

  sme:

    A:
      - "Attr"
      - "Pl+Nom"
      - "Comp+Attr"
      - "Comp+Sg+Nom"
      - "Superl+Sg+Nom"

    # Adding N+G3 from lex
    N:
      - "Sg+Gen"
      - "Sg+Ill"
      - "Pl+Ill"

    # Adding V+ and potential V subtypes via lexicon.
    V:
      - "Ind+Prs+Sg1"
      - "Ind+Prt+Sg1"
      - "Ind+Prs+ConNeg"

TagTransforms:
  sme:
    V: "verb"
    N: "subst."
    A: "adj."
    NomAg: "aktor"
    G3: ""

