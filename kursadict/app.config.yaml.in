# This option set is not used outside of providing shortcuts for
# following settings.
Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  gthome: &GTHOME '/home/ryan/gtsvn'

# Morphological system definitions. Since YAML variables aren't able to
# be used in concatenating strings, certain paths with references must
# be lists. These are concatenated automatically.
Morphology:
  sme:
    tool: *LOOKUP 
    file: [*GTHOME, "/gt/sme/bin/n-sme.fst"]
    inverse_file: [*GTHOME, "/gt/sme/bin/isme-norm.fst"]
    format: 'xfst'
    options:
      compoundBoundary: "  + #"
      tagsep: ' '
      inverse_tagsep: '+'
  # Trying out fst
  # nob:
  #   tool: [*GTHOME, '/st/nob/obt/bin/mtag-osx64']
  #   format: 'obt'
  nob:
    tool: *LOOKUP
    file: [*GTHOME, '/st/nob/bin/nob.fst']
    inverse_file: [*GTHOME, '/st/nob/bin/inob.fst']
    format: 'xfst'
    options:
      tagsep: '+'
      inverse_tagsep: '+'
  sma:
    tool: *LOOKUP
    file: [*GTHOME, '/langs/sma/src/analyser-gt-desc.xfst']
    inverse_file: [*GTHOME, '/langs/sma/src/generator-gt-norm.xfst']
    format: 'xfst'
    options:
      tagsep: '+'
      inverse_tagsep: '+'

# Language names which are displayed in the UI.
Languages:
  - iso: sme
    name:
      eng: "Northern Sámi"
      nob: "nordsamisk"

  - iso: nob
    name:
      eng: "Norwegian (Bokmål)"
      nob: "norsk (bokmål)"

  - iso: fin
    name:
      eng: "Finnish"
      nob: "finsk"

  - iso: sma
    name:
      eng: "Southern Sámi"
      nob: "sørsamisk"

  - iso: eng
    name:
      eng: "English"
      nob: "engelsk"

# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:
  - source: sme
    target: nob
    path: 'dicts/sme-nob.all.xml'

  - source: nob
    target: sme
    path: 'dicts/nob-sme.all.xml'

  - source: sme
    target: fin
    path: 'dicts/sme-fin.all.xml'

  - source: fin
    target: sme
    path: 'dicts/fin-sme.all.xml'

  - source: sma
    target: nob
    path: 'dicts/sma-nob.all.xml'

  - source: nob
    target: sma
    path: 'dicts/nob-sma.all.xml'



# These are the accepted forms for which we will display dictionary
# entries in the detailed word view. If a word can be analyzed with
# one of these analyses, then we assume it is a "baseform"/dictionary
# form.
#
Baseforms:
  sma:
    V: 
      - "V+IV+Inf"
      - "V+TV+Inf"
      - "V+Inf"

    N:
      - "N+Sg+Nom"
      - "N+SgNomCmp"
      - "N+SgCmp"

  sme:
    V:
      - "V"
      - "V inf."

    A:
      - "A+Attr"

    Adv:
      - 'Adv'

    N:
      - "N ent. nom."
      - "N hum. nom."
      - "N NomAg ent. nom."
      - "N"

  nob:
    V:
      - "V"
      - "V+Inf"
    N:
      - "N"
      - "N+Sg+Indef"
    A:
      - "A+Pos+Msc+Sg+Indef"
      - "A+Pos+Fem+Sg+Indef"
      - "A+Pos+MF+Sg+Indef"

# Paradigms that are generated and displayed with words that have a
# baseform match in their analysis. Here the POS and Wordtype are not
# included, because these will be applied automatically
#
Paradigms:
  sma:
    N:
      - "Sg+Nom"
      - "Pl+Nom"
      - "Sg+Ill"
      - "Sg+Ine"
      - "Pl+Ill"
      - "Pl+Ine"
    V:
      - "Ind+Prs+Sg1"
      - "Ind+Prt+Sg1"
      - "ConNeg"

  sme:

    A:
      - "Attr"
      - "Pl+Nom"
      - "Comp+Attr"
      - "Comp+Sg+Nom"
      - "Superl+Sg+Nom"

    # Adding N+G3 from lex
    N:
      - "Sg+Gen"
      - "Sg+Ill"
      - "Pl+Ill"

    # Adding V+ and potential V subtypes via lexicon.
    V:
      - "Ind+Prs+Sg1"
      - "Ind+Prt+Sg1"
      - "Ind+Prs+ConNeg"

  nob:
    V:
      - "Imp"
      - "Ind+Prs"
      - "Ind+Prt"
      - "PrfPtc"


TagTransforms:
  sme:
    V: "verb"
    N: "subst."
    A: "adj."
    NomAg: "aktor"
    G3: ""

