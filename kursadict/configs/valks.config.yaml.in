# Default locale, but use ISO 2 code or whatever corresponds to what is
# in the translations directory.

ApplicationSettings:
  app_name: "Neahttadigis√°nit"
  default_locale: "se"
  default_pair: ["kpv", "rus"]
  mobile_default_pair: false
  locales_available:
    - kpv
    - rus
    - fin


# This option set is not used outside of providing shortcuts for
# following settings.
Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  gthome: &GTHOME '/home/neahtta/gtsvn'
  opt: &OPT '/opt/smi'

# Morphological system definitions. Since YAML variables aren't able to
# be used in concatenating strings, certain paths with references must
# be lists. These are concatenated automatically.
Morphology:
  kpv:
    tool: *LOOKUP
    file: [*GTHOME, '/langs/kpv/src/analyser-gt-desc.xfst']
    inverse_file: [*GTHOME, '/langs/kpv/src/generator-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*GTHOME, '/langs/fin/src/analyser-gt-desc.xfst']
    inverse_file: [*GTHOME, '/langs/fin/src/generator-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: kpv
    name:
      eng: "komi"
      nob: "komi"
      fin: "komi"
  - iso: eng
    name:
      eng: "english"
      nob: "english"
      fin: "english"
  - iso: fin
    name:
      eng: "finnish"
      nob: "finnish"
      fin: "finnish"
  - iso: rus
    name:
      eng: "russian"
      nob: "russian"
      fin: "russian"


# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:
  - source: kpv
    target: eng
    path: 'dicts/kom2x.all.xml'

  - source: kpv
    target: fin
    path: 'dicts/kom2x.all.xml'

  - source: kpv
    target: rus
    path: 'dicts/kom2x.all.xml'

# Abstracting display formats out here, because there are different
# requirements for different languages and different wordforms.

# Paradigms for generation on detailed pages. Leave POS out of tags,
# this is supplied automatically. Otherwise use generation FST tag
# format.
Paradigms:
  kpv:
    PRON:
      - "Pregenerate"
    N:
      - "Sg+Nom"
      - "Sg+Gen"
      - "Sg+Ill"
      - "Pl+Ill"
    A:
      - "Sg+Nom"
      - "Comp+Sg+Nom"
      - "Superl+Sg+Nom"
    V:
      - "Ind+Prs+Sg1"
      - "Ind+Prs+Sg3"
      - "Ind+Prs+Pl3"
      - "Ind+Prt+Sg1"
      - "ConNeg"
      - "PrfPrc"
      - "Ger"
      - "VGen"


TagSets:
  kpv:
    pos: ["N", "V", "A", "Pr", "Po", "Num"]
    type: ["NomAg", "G3", "aktor"]

# Note, these come from dictionary fst, so tag parts are mostly 
# already translated

# (sourcelang, targlang)
# V: "v."
# FST format: "user friendly"

TagTransforms:

  (kpv, rus):
    V: "v."
    N: "s."
    A: "adj."

  (mdf, rus):
    V: "v."
    N: "s."
    A: "adj."

  (kpv, kpv):
    V: "v."
    N: "s."
    A: "adj."

  (mdf, mdf):
    V: "v."
    N: "s."
    A: "adj."

