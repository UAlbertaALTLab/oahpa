# Default locale, but use ISO 2 code or whatever corresponds to what is
# in the translations directory.

ApplicationSettings:
  app_name: "Neahttadigisánit"
  default_locale: "ru"
  default_pair: ["olo", "fin"]
  mobile_default_pair: false
  locales_available:
    - olo
    - fi
    - liv
    - lv

# This option set is not used outside of providing shortcuts for
# following settings.
Tools:
  xfst_lookup: &LOOKUP '/usr/bin/lookup'
  gthome: &GTHOME '/home/neahtta/gtsvn'
  opt: &OPT '/opt/b'
 
# Morphological system definitions. Since YAML variables aren't able to
# be used in concatenating strings, certain paths with references must
# be lists. These are concatenated automatically.
Morphology:
  olo:
    tool: *LOOKUP
    file: [*GTHOME, '/langs/olo/src/analyser-gt-desc.xfst']
    inverse_file: [*GTHOME, '/langs/olo/src/generator-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  fin:
    tool: *LOOKUP
    file: [*GTHOME, '/langs/fin/src/analyser-gt-desc.xfst']
    inverse_file: [*GTHOME, '/langs/fin/src/generator-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  liv:
    tool: *LOOKUP
    file: [*GTHOME, '/langs/liv/src/analyser-gt-desc.xfst']
    inverse_file: [*GTHOME, '/langs/liv/src/generator-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  liv:
    tool: *LOOKUP
    file: [*GTHOME, '/langs/fkv/src/analyser-gt-desc.xfst']
    inverse_file: [*GTHOME, '/langs/fkv/src/generator-gt-norm.xfst']
    format: 'xfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: olo
    name:
      fin: "olonets"
      eng: "olonets"
      nob: "olonets"
  - iso: fin
    name:
      fin: "suomi"
      eng: "finnish"
      nob: "finsk"
  - iso: liv
    name:
      fin: "liivi"
      eng: "Livonian"
      nob: "livisk"
  - iso: kpv
    name:
      fin: "kvääni"
      eng: "Kven"
      nob: "kvensk"


# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:
  - source: olo
    target: fin
    path: 'dicts/olo-fin.all.xml'
  - source: liv
    target: fin
    path: 'dicts/liv-fin.all.xml'
  - source: kpv 
    target: nob
    path: 'dicts/kpv-nob.all.xml'


# Abstracting display formats out here, because there are different
# requirements for different languages and different wordforms.

# Paradigms for generation on detailed pages. Leave POS out of tags,
# this is supplied automatically. Otherwise use generation FST tag
# format.
Paradigms:
  olo:
    PRON:
      - "Pregenerate"
    N:
      - "Sg+Par"
      - "Sg+Apr"
      - "Sg+Gen"
      - "Pl+Par"
    V:
      - "Ind+Prs+ScSg1"
      - "Ind+Prs+ScSg3"
      - "Ind+Prs+ScPl3"
      - "Ind+Prt+ScSg1"
  
  liv:
    PRON:
      - "Pregenerate"
    N:
      - "Sg+Par"
      - "Sg+Gen"
      - "Pl+Par"
    V:
      - "Ind+Prs+Sg1"
      - "Ind+ConNeg+Sg"
      - "Ind+Prt+Sg1"


TagSets:
  olo:
    pos: ["N", "V", "A", "Pr", "Po", "Num"]
    type: ["NomAg", "G3", "aktor"]

# (sourcelang, targlang)
# V: "v."
# FST format: "user friendly"
TagTransforms:

  (olo, rus):
    V: "v."
    N: "s."
    A: "adj."

  (liv, rus):
    V: "v."
    N: "s."
    A: "adj."

  (olo, olo):
    V: "v."
    N: "s."
    A: "adj."

  (liv, liv):
    V: "v."
    N: "s."
    A: "adj."

  (kpv, nob):
    V: "v."
    N: "s."
    A: "adj."

